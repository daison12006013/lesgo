{
  "compilerOptions": {
    "target": "es2017",
    "allowSyntheticDefaultImports": false,
    "baseUrl": "./",
    "paths": {
      "Middlewares/*": ["src/middlewares/*"],
      "Exceptions/*": ["src/exceptions/*"],
      "Services/*": ["src/services/*"],
      "Constants/*": ["src/constants/*"],
      "Core/*": ["src/core/*"],
      "Factories/*": ["src/factories/*"],
      "Config/*": ["src/config/*"],
      "Models/*": ["src/models/*"]
    }
  },
  "exclude": ["node_modules", "dist", "config", "coverage"]
}
